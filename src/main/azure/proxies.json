{
    "$schema": "http://json.schemastore.org/proxies",
    "proxies": {
        "proxy1": {
            "matchCondition": {
                "methods": [ "GET" ],
                "route": "/api/question"
            },
            "backendUri": "https://localhost/api/getQuestion"
        },
        "proxy2": {
            "matchCondition": {
                "methods": [ "POST" ],
                "route": "/api/question"
            },
            "backendUri": "https://localhost/api/createQuestion"
        },
        "proxy3": {
            "matchCondition": {
                "methods": [ "GET" ],
                "route": "/api/topics"
            },
            "backendUri": "https://localhost/api/getTopic"
        },
        "proxy4": {
            "matchCondition": {
                "methods": [ "POST" ],
                "route": "/api/topics"
            },
            "backendUri": "https://localhost/api/createTopic"
        }
    }
}